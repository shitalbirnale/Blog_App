@model BlogApplication.Models.Blog
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<h1>Create Blog</h1>

<form asp-controller="Blogs" method="post" class="form-horizontal" role="form">
    <div class="mt-3">
        <label class="form-label">Blog Title</label>
        <input type="text" class="form-control" asp-for="Title" required />
        <span asp-validation-for="Title" class="text-danger" />
    </div>
    <div class="mt-3">
        <label class="form-label">Auther Name</label>
        <input type="text" class="form-control" asp-for="AutherName" required />
        <span asp-validation-for="AutherName" class="text-danger" />
    </div>
    <div class="mt-3">
        <label class="form-label">publication Date</label>
        <input type="date" class="form-control" asp-for="PublicationDate" required />
        <span asp-validation-for="PublicationDate" class="text-danger" />
    </div>
    <div class="form-outline mb-4">
        <label class="form-label" asp-for="Contents"></label>
        <div>
            <textarea asp-for="Contents" class="form-control" id="summernote" minlength="30" required></textarea>
            <span asp-validation-for="Contents" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary" asp-controller="Blogs">Save</button> 
    </div>
</form>


